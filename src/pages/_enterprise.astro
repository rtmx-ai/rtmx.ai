---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

const deploymentOptions = [
  {
    name: 'Cloud Managed Service',
    badge: 'sync.rtmx.io',
    status: 'FedRAMP In Progress',
    description: 'Fully managed RTMX Sync with real-time collaboration. Zero infrastructure management.',
    features: [
      'Real-time CRDT synchronization',
      'End-to-end encryption (AES-256-GCM)',
      'US or EU data residency',
      '99.9% SLA guarantee',
    ],
  },
  {
    name: 'GovCloud',
    badge: 'IL4/IL5 Ready',
    status: 'Available',
    description: 'Deploy on AWS GovCloud, Azure Government, or GCP Assured Workloads.',
    features: [
      'FedRAMP High environments',
      'DoD IL4/IL5 compliant infrastructure',
      'ITAR/EAR compatible',
      'Managed by ioTACTICAL or self-managed',
    ],
  },
  {
    name: 'Self-Hosted Enterprise',
    badge: 'Your Infrastructure',
    status: 'Available',
    description: 'Deploy RTMX in your own data center with full control over your environment.',
    features: [
      'Complete data sovereignty',
      'Custom security policies',
      'Integration with existing identity providers',
      'Dedicated engineering support',
    ],
  },
  {
    name: 'Air-Gap (Zarf)',
    badge: 'Disconnected',
    status: 'Available',
    description: 'Fully disconnected deployment using Zarf packages for classified environments.',
    features: [
      'No external network dependencies',
      'Cryptographically verified packages',
      'Offline license validation',
      'SCIF/classified network compatible',
    ],
  },
];

const complianceTimeline = [
  {
    quarter: 'Q1 2026',
    status: 'in-progress',
    title: 'Foundation',
    items: [
      'SBOM generation (SPDX/CycloneDX)',
      'NIST 800-53 Rev 5 control mapping',
      'Vulnerability disclosure program',
      'Security documentation release',
    ],
  },
  {
    quarter: 'Q2 2026',
    status: 'planned',
    title: 'FedRAMP 20x Pilot',
    items: [
      'FedRAMP 20x pilot application',
      'System Security Plan (SSP)',
      'Plan of Action & Milestones (POA&M)',
      'Initial security assessment',
    ],
  },
  {
    quarter: 'Q3 2026',
    status: 'planned',
    title: '3PAO Assessment',
    items: [
      'Third-party assessment organization engagement',
      'Security Assessment Report (SAR)',
      'Penetration testing',
      'Continuous monitoring implementation',
    ],
  },
  {
    quarter: 'Q4 2026',
    status: 'planned',
    title: 'FedRAMP Moderate',
    items: [
      'FedRAMP Moderate authorization',
      'FedRAMP Marketplace listing',
      'Agency ATO support',
      'Continuous monitoring active',
    ],
  },
  {
    quarter: '2027',
    status: 'planned',
    title: 'DoD Authorization',
    items: [
      'DoD IL4 provisional authorization',
      'DoD IL5 provisional authorization',
      'DISA STIG compliance',
      'DoD CIO sponsorship',
    ],
  },
];

const atoArtifacts = [
  {
    name: 'NIST 800-53 Rev 5 Controls Mapping',
    description: 'Complete mapping of RTMX controls to NIST 800-53 Rev 5 security and privacy controls.',
    format: 'OSCAL JSON',
  },
  {
    name: 'Information Assurance Boundary Diagrams',
    description: 'Network architecture diagrams showing authorization boundaries and data flows.',
    format: 'Visio/PDF',
  },
  {
    name: 'PPSM Matrix',
    description: 'Ports, Protocols, and Services Management matrix for network security review.',
    format: 'Excel/CSV',
  },
  {
    name: 'Customer Responsibility Matrix',
    description: 'Detailed breakdown of security responsibilities between RTMX and customer.',
    format: 'Excel/PDF',
  },
  {
    name: 'Software Bill of Materials',
    description: 'Complete SBOM in SPDX and CycloneDX formats for supply chain transparency.',
    format: 'SPDX/CycloneDX',
  },
  {
    name: 'Penetration Test Results',
    description: 'Summary of third-party penetration testing results (available under NDA).',
    format: 'PDF',
  },
];

const cmmcSupport = [
  {
    title: 'CUI Handling',
    description: 'RTMX supports Controlled Unclassified Information (CUI) handling with proper marking, storage, and transmission controls.',
  },
  {
    title: 'Evidence Collection',
    description: 'Built-in audit logging and compliance reporting to support CMMC assessment evidence collection.',
  },
  {
    title: 'Access Control',
    description: 'Role-based access control (RBAC) and multi-factor authentication to meet CMMC access control requirements.',
  },
  {
    title: 'Incident Response',
    description: 'Immutable audit logs and security event monitoring to support incident response and forensic capabilities.',
  },
];
---

<StarlightPage frontmatter={{ title: 'Enterprise', template: 'splash', hero: { tagline: '' } }}>
  <div class="enterprise-page">
    <!-- Hero Section -->
    <section class="enterprise-hero">
      <span class="enterprise-badge">Enterprise & Government</span>
      <h1>Secure Requirements Management for Defense & Government</h1>
      <p class="hero-subtitle">
        RTMX delivers enterprise-grade requirements traceability with the security, compliance,
        and deployment flexibility that defense contractors and government agencies require.
      </p>
      <div class="hero-cta">
        <a href="mailto:sales@rtmx.ai?subject=RTMX%20Enterprise%20Inquiry" class="cta-button primary">
          Contact Enterprise Sales
        </a>
        <a href="/security" class="cta-button secondary">
          Security Overview
        </a>
      </div>
    </section>

    <!-- Deployment Options Section -->
    <section class="deployment-section">
      <h2>Deployment Options</h2>
      <p class="section-subtitle">
        Choose the deployment model that meets your security and compliance requirements.
      </p>
      <div class="deployment-grid not-content">
        {deploymentOptions.map((option) => (
          <div class="deployment-card">
            <div class="deployment-header">
              <span class="deployment-badge">{option.badge}</span>
              <span class={`deployment-status ${option.status === 'Available' ? 'available' : 'in-progress'}`}>
                {option.status}
              </span>
            </div>
            <h3>{option.name}</h3>
            <p class="deployment-description">{option.description}</p>
            <ul class="deployment-features">
              {option.features.map((feature) => (
                <li>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Compliance Timeline Section -->
    <section class="timeline-section">
      <h2>FedRAMP Authorization Roadmap</h2>
      <p class="section-subtitle">
        Our path to FedRAMP Moderate authorization and DoD IL4/IL5 support.
      </p>
      <div class="compliance-timeline not-content">
        {complianceTimeline.map((phase, index) => (
          <div class={`timeline-phase ${phase.status}`}>
            <div class="phase-marker">
              <span class="phase-quarter">{phase.quarter}</span>
              {phase.status === 'in-progress' && (
                <span class="phase-badge">In Progress</span>
              )}
            </div>
            <div class="phase-content">
              <h3>{phase.title}</h3>
              <ul>
                {phase.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- ATO Artifacts Section -->
    <section class="artifacts-section">
      <h2>ATO Artifact Availability</h2>
      <p class="section-subtitle">
        Documentation and artifacts to support your Authority to Operate (ATO) process.
      </p>
      <div class="artifacts-grid not-content">
        {atoArtifacts.map((artifact) => (
          <div class="artifact-card">
            <div class="artifact-header">
              <h3>{artifact.name}</h3>
              <span class="artifact-format">{artifact.format}</span>
            </div>
            <p>{artifact.description}</p>
          </div>
        ))}
      </div>
      <div class="artifacts-cta">
        <p>Request ATO documentation package for your agency or organization.</p>
        <a href="mailto:sales@rtmx.ai?subject=RTMX%20ATO%20Documentation%20Request" class="cta-button secondary">
          Request Documentation
        </a>
      </div>
    </section>

    <!-- CMMC Section -->
    <section class="cmmc-section">
      <h2>CMMC 2.0 Support</h2>
      <p class="section-subtitle">
        Help defense contractors meet CMMC 2.0 Level 2 requirements for protecting CUI.
      </p>
      <div class="cmmc-grid not-content">
        {cmmcSupport.map((item) => (
          <div class="cmmc-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
      <div class="cmmc-note">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
        <p>
          RTMX helps contractors manage their requirements traceability in a compliant manner.
          Contact us to discuss how RTMX fits into your CMMC compliance strategy.
        </p>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="contact-section">
      <h2>Ready to Get Started?</h2>
      <p>
        Our enterprise team is ready to discuss your security requirements, deployment options,
        and help you achieve compliance for your mission-critical projects.
      </p>
      <div class="contact-options">
        <div class="contact-card">
          <h3>Enterprise Sales</h3>
          <p>Discuss pricing, deployment options, and enterprise features.</p>
          <a href="mailto:sales@rtmx.ai?subject=RTMX%20Enterprise%20Sales%20Inquiry" class="cta-button primary">
            Contact Sales
          </a>
        </div>
        <div class="contact-card">
          <h3>Technical Discussion</h3>
          <p>Deep-dive into security architecture and compliance details.</p>
          <a href="mailto:sales@rtmx.ai?subject=RTMX%20Technical%20Discussion" class="cta-button secondary">
            Schedule Call
          </a>
        </div>
        <div class="contact-card">
          <h3>ATO Support</h3>
          <p>Get documentation and support for your ATO process.</p>
          <a href="mailto:sales@rtmx.ai?subject=RTMX%20ATO%20Support%20Request" class="cta-button secondary">
            Request Support
          </a>
        </div>
      </div>
    </section>

    <footer class="enterprise-footer">
      <p>
        Built by <a href="https://iotactical.co">ioTACTICAL Engineering</a> |
        <a href="mailto:sales@rtmx.ai">sales@rtmx.ai</a>
      </p>
    </footer>
  </div>
</StarlightPage>

<style is:global>
  /* Hide Starlight's default hero/title for enterprise page */
  .hero,
  main > header,
  .content-panel > header,
  [aria-label="Main"] > header {
    display: none !important;
  }

  .main-pane,
  .content-panel {
    padding: 0 !important;
    padding-block: 0 !important;
  }

  .sl-container {
    max-width: 100% !important;
    padding: 0 !important;
  }

  main {
    padding: 0 !important;
  }

  .enterprise-page {
    background: #0a0a0a;
    min-height: 100vh;
    width: 100%;
  }

  /* Hero Section */
  .enterprise-hero {
    text-align: center;
    padding: 3rem 2rem 4rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .enterprise-badge {
    display: inline-block;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: #ffffff;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.375rem 1rem;
    border-radius: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .enterprise-hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    background: linear-gradient(135deg, #3b82f6 0%, #93c5fd 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .enterprise-hero .hero-subtitle {
    font-size: 1.25rem;
    color: #9ca3af;
    line-height: 1.7;
    margin: 0 0 2rem 0;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Deployment Section */
  .deployment-section {
    padding: 4rem 2rem;
    background: #0f0f0f;
    max-width: 100%;
  }

  .deployment-section > h2,
  .deployment-section > p,
  .deployment-section > .deployment-grid {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .deployment-section h2,
  .timeline-section h2,
  .artifacts-section h2,
  .cmmc-section h2,
  .contact-section h2 {
    font-size: 2rem;
    color: #f9fafb;
    text-align: center;
    margin: 0 0 0.5rem 0;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #9ca3af;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .deployment-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .deployment-card {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: border-color 0.2s ease;
  }

  .deployment-card:hover {
    border-color: #3b82f6;
  }

  .deployment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .deployment-badge {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    background: rgba(59, 130, 246, 0.15);
    color: #3b82f6;
  }

  .deployment-status {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .deployment-status.available {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
  }

  .deployment-status.in-progress {
    background: rgba(245, 158, 11, 0.2);
    color: #f59e0b;
  }

  .deployment-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #f9fafb;
    margin: 0 0 0.5rem 0;
  }

  .deployment-description {
    font-size: 0.95rem;
    color: #9ca3af;
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .deployment-features {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .deployment-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #d1d5db;
    margin-bottom: 0.5rem;
  }

  .deployment-features li:last-child {
    margin-bottom: 0;
  }

  .deployment-features svg {
    color: #10b981;
    flex-shrink: 0;
  }

  /* Timeline Section */
  .timeline-section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    border-top: 1px solid #262626;
  }

  .compliance-timeline {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
    position: relative;
  }

  .timeline-phase {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 0.75rem;
    padding: 1.5rem;
    position: relative;
  }

  .timeline-phase.in-progress {
    border-color: #3b82f6;
    background: linear-gradient(180deg, rgba(59, 130, 246, 0.1) 0%, #171717 100%);
  }

  .phase-marker {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .phase-quarter {
    font-size: 1.25rem;
    font-weight: 700;
    color: #3b82f6;
  }

  .phase-badge {
    display: inline-block;
    width: fit-content;
    font-size: 0.65rem;
    font-weight: 600;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .phase-content h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #f9fafb;
    margin: 0 0 0.75rem 0;
  }

  .phase-content ul {
    margin: 0;
    padding: 0 0 0 1.25rem;
  }

  .phase-content li {
    font-size: 0.8rem;
    color: #9ca3af;
    line-height: 1.5;
    margin-bottom: 0.25rem;
  }

  .phase-content li:last-child {
    margin-bottom: 0;
  }

  /* Artifacts Section */
  .artifacts-section {
    padding: 4rem 2rem;
    background: #0f0f0f;
    max-width: 100%;
    border-top: 1px solid #262626;
  }

  .artifacts-section > h2,
  .artifacts-section > p,
  .artifacts-section > .artifacts-grid,
  .artifacts-section > .artifacts-cta {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .artifacts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .artifact-card {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .artifact-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    gap: 0.5rem;
  }

  .artifact-card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #f9fafb;
    margin: 0;
  }

  .artifact-format {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background: rgba(107, 114, 128, 0.2);
    color: #9ca3af;
    white-space: nowrap;
  }

  .artifact-card p {
    font-size: 0.9rem;
    color: #9ca3af;
    line-height: 1.6;
    margin: 0;
  }

  .artifacts-cta {
    text-align: center;
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid #262626;
  }

  .artifacts-cta p {
    color: #9ca3af;
    margin: 0 0 1rem 0;
    font-size: 1rem;
  }

  /* CMMC Section */
  .cmmc-section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    border-top: 1px solid #262626;
  }

  .cmmc-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .cmmc-card {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 0.75rem;
    padding: 1.5rem;
    border-left: 3px solid #10b981;
  }

  .cmmc-card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #f9fafb;
    margin: 0 0 0.5rem 0;
  }

  .cmmc-card p {
    font-size: 0.95rem;
    color: #9ca3af;
    line-height: 1.6;
    margin: 0;
  }

  .cmmc-note {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-top: 2rem;
    padding: 1rem 1.5rem;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 0.5rem;
  }

  .cmmc-note svg {
    color: #3b82f6;
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .cmmc-note p {
    font-size: 0.9rem;
    color: #d1d5db;
    line-height: 1.6;
    margin: 0;
  }

  /* Contact Section */
  .contact-section {
    text-align: center;
    padding: 4rem 2rem;
    background: #0f0f0f;
    border-top: 1px solid #262626;
  }

  .contact-section > p {
    color: #9ca3af;
    margin: 0 auto 2.5rem;
    max-width: 600px;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .contact-options {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact-card {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 0.75rem;
    padding: 2rem 1.5rem;
    text-align: center;
  }

  .contact-card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #f9fafb;
    margin: 0 0 0.5rem 0;
  }

  .contact-card p {
    font-size: 0.9rem;
    color: #9ca3af;
    line-height: 1.5;
    margin: 0 0 1.5rem 0;
  }

  /* CTA Buttons */
  .cta-button {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-button.primary {
    background: #3b82f6;
    color: #ffffff;
  }

  .cta-button.primary:hover {
    background: #60a5fa;
  }

  .cta-button.secondary {
    background: transparent;
    color: #3b82f6;
    border: 1px solid #3b82f6;
  }

  .cta-button.secondary:hover {
    background: rgba(59, 130, 246, 0.1);
  }

  /* Footer */
  .enterprise-footer {
    padding: 2rem;
    text-align: center;
    border-top: 1px solid #262626;
  }

  .enterprise-footer p {
    color: #6b7280;
    font-size: 0.9rem;
    margin: 0;
  }

  .enterprise-footer a {
    color: #3b82f6;
    text-decoration: none;
  }

  .enterprise-footer a:hover {
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .compliance-timeline {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .deployment-grid,
    .cmmc-grid,
    .contact-options {
      grid-template-columns: 1fr;
    }

    .artifacts-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .compliance-timeline {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .enterprise-hero h1 {
      font-size: 2rem;
    }

    .enterprise-hero .hero-subtitle {
      font-size: 1rem;
    }

    .artifacts-grid,
    .compliance-timeline {
      grid-template-columns: 1fr;
    }

    .deployment-section h2,
    .timeline-section h2,
    .artifacts-section h2,
    .cmmc-section h2,
    .contact-section h2 {
      font-size: 1.5rem;
