---
interface Props {
  name: string;
  price: string;
  period?: string;
  description: string;
  features: string[];
  cta: string;
  ctaHref?: string;
  popular?: boolean;
}

const { name, price, period, description, features, cta, ctaHref, popular } = Astro.props;
---

<div class={`pricing-card ${popular ? 'popular' : ''}`}>
  {popular && <span class="popular-badge">Most Popular</span>}
  <h3 class="card-name">{name}</h3>
  <div class="card-price">
    <span class="price">{price}</span>
    {period && <span class="period">{period}</span>}
  </div>
  <p class="card-description">{description}</p>
  <ul class="feature-list">
    {features.map(feature => (
      <li>
        <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 13l4 4L19 7" />
        </svg>
        {feature}
      </li>
    ))}
  </ul>
  <a href={ctaHref || '#waitlist'} class={`cta-button ${popular ? 'primary' : 'secondary'}`}>
    {cta}
  </a>
</div>

<style is:global>
  .pricing-card {
    background: #171717;
    border: 1px solid #262626;
    border-radius: 1rem;
    padding: 2rem;
    padding-top: 2.5rem;
    display: flex;
    flex-direction: column;
    position: relative;
    transition: border-color 0.2s ease;
    box-sizing: border-box;
  }

  .pricing-card:hover {
    border-color: #404040;
  }

  .pricing-card.popular {
    border-color: #10b981;
  }

  .pricing-card.popular:hover {
    border-color: #10b981;
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #10b981;
    color: #0a0a0a;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 1rem;
    border-radius: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .card-name {
    color: #f9fafb;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .card-price {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .price {
    font-size: 2.5rem;
    font-weight: 700;
    color: #f9fafb;
  }

  .period {
    font-size: 1rem;
    color: #9ca3af;
  }

  .card-description {
    color: #9ca3af;
    font-size: 0.95rem;
    margin: 0 0 1.5rem 0;
    line-height: 1.5;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    flex: 1;
  }

  .feature-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    color: #e5e7eb;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .check-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    color: #10b981;
    margin-top: 2px;
  }

  .cta-button {
    display: block;
    text-align: center;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-button.primary {
    background: #10b981;
    color: #0a0a0a;
  }

  .cta-button.primary:hover {
    background: #6ee7b7;
  }

  .cta-button.secondary {
    background: transparent;
    color: #10b981;
    border: 2px solid #10b981;
  }

  .cta-button.secondary:hover {
    background: #10b981;
    color: #0a0a0a;
  }
</style>
